{
    "view":"crm:views/dashlets/activities",
    "options": {
        "view": "crm:views/dashlets/options/activities",
        "fields": {
            "title": {
                "type": "varchar",
                "required": true
            },
            "autorefreshInterval": {
                "type": "enumFloat",
                "options": [0, 0.5, 1, 2, 5, 10]
            },
            "enabledScopeList": {
                "type": "multiEnum",
                "translation": "Global.scopeNamesPlural",
                "required": true
            },
            "displayRecords": {
                "type": "enumInt",
                "options": [3,4,5,7,10,15,20,30,50]
            },
            "futureDays": {
                "type": "int",
                "min": 0,
                "required": true
            }
        },
        "defaults": {
            "displayRecords": 10,
            "autorefreshInterval": 0.5,
            "futureDays": 3,
            "enabledScopeList": ["Meeting", "Call", "Task"]
        },
        "layout": [
            {
                "rows": [
                    [
                        {"name": "title"},
                        {"name": "autorefreshInterval"}
                    ],
                    [
                        {"name": "displayRecords"},
                        {"name": "enabledScopeList"}
                    ],
                    [
                        {"name": "futureDays"},
                        false
                    ]
                ]
            }
        ]
    }
}
